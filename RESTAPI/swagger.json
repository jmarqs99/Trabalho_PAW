{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Trabalho PAW",
        "description": "REST API para a milestone 1"
    },
    "host": "localhost:3000",
    "basePath": "/api",
    "schemes": [
        "http"
    ],
    "consumes": [
        "aplication/json"
    ],
    "produces": [
        "aplication/json"
    ],
    "paths": {
        "/pedido": {
            "post": {
                "summary": "Criar um pedido na plataforma",
                "tags": [
                    "Pedido"
                ],
                "parameters": [
                    {
                        "informacao": "informação útil que o utilizador queira acrescentar ao pedido",
                        "in": "body",
                        "estadoUtilizador": "Indicar estado do utilizado",
                        "shema": {
                            "$ref": "#/models/pedido.js#"
                        }
                    }
                ]
            },
            "get": {
                "summary": "Retorna todos os pedidos existentes",
                "tags": [
                    "Pedido"
                ]
            }
        },
        "/pedido/:pedidoId": {
            "get": {
                "summary": "Retorna um pedido com um determinado id",
                "tags": [
                    "Pedido"
                ],
                "parameters": [
                    {
                        "name": "Pedido",
                        "in": "Header",
                        "description": "Pedido com um dado id"
                    }
                ]
            }
        },
        "/utilizador/": {
            "post": {
                "summary": "Criar novo utlizador",
                "tags": [
                    "Utilizador"
                ],
                "parameters": [
                    {
                        "name": "utilizador",
                        "in": "body",
                        "description": "Utilizador com as propriedades dadas",
                        "schema": {
                            "$ref": "#/definitions/utilizador"
                        }
                    }
                ],
                "produces": [
                    "aplication/json"
                ],
                "responses": {
                    "200": {
                        "description": "Novo utilizador criado.",
                        "schema": {
                            "$ref": "#/definitions/utilizador"
                        }
                    }
                }
            },
            "get": {
                "summary": "Retorna todos os utilizadores existentes",
                "tags": [
                    "Utilizador"
                ],
                "responses": {
                    "200": {
                        "description": "Utilizador encontrado",
                        "schema": {
                            "$ref": "#/definitions/utilizador"
                        }
                    }
                }
            }
        },
        "/utilizador/{utilizadorId}": {
            "parameters": [
                {
                    "name": "utilizadorId",
                    "in": "path",
                    "description": "id do utilizador a encontrar",
                    "required": true,
                    "type": "string"
                }
            ],
            "get": {
                "summary": "Retorna o utilizador com o id dado",
                "tags": [
                    "Utilizador"
                ],
                "responses": {
                    "200": {
                        "description": "Utilizador retornado",
                        "schema": {
                            "$ref": "#/definitions/utilizador"
                        }
                    }
                }
            },
            "put": {
                "summary": "Atualiza o utilizador com o id dado",
                "tags": [
                    "Utilizador"
                ],
                "parameters": [
                    {
                        "name": "Utilizador",
                        "in": "body",
                        "description": "Utilizador com as novas propriedades",
                        "schema": {
                            "$ref": "#/definitions/utilizador"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Utilizador atualizado",
                        "schema": {
                            "$ref": "#/definitions/utilizador"
                        }
                    }
                }
            }
        },
        "/tecnico": {
            "get": {
                "summary": "Retorna todos os técnicos existentes",
                "tags": [
                    "Técnico"
                ],
                "produces": [
                    "application/json"
                ]
            }
        },
        "/tecnico/:userID": {
            "post": {
                "summary": "Define um utilizador como técnico",
                "tags": [
                    "Técnico"
                ],
                "parameters": [
                    {
                        "name": "userID",
                        "in": "Query Params",
                        "description": "ID do Utilizador"
                    }
                ]
            }
        },
        "/tecnico/:tecnicoID": {
            "get": {
                "summary": "Retorna um técnio dado um determinado ID",
                "tags": [
                    "Técnico"
                ],
                "parameters": [
                    {
                        "name": "tecnicoID",
                        "in": "Query Params",
                        "description": "ID do Técnico"
                    }
                ]
            },
            "delete": {
                "summary": "Remove um utilizador da posição de técnico",
                "tags": [
                    "Técnico"
                ],
                "parameters": [
                    {
                        "name": "tecnicoID",
                        "in": "Query Params",
                        "description": "ID do Técnico"
                    }
                ]
            }
        }
    },
    "definitions": {
        "utilizador": {
            "required": [],
            "properties": {
                "nmrCC": {
                    "type": "string",
                    "uniqueItems": true
                },
                "password": {
                    "type": "string",
                    "uniqueItems": true
                },
                "primeiroNome": {
                    "type": "string"
                },
                "ultimoNome": {
                    "type": "string"
                },
                "estado": {
                    "type": "string"
                }
            }
        }
    }
}