{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Trabalho PAW",
        "description": "REST API para a milestone 1"
    },
    "host": "localhost:3000",
    "basePatch": "/api/",
    "tags": [
        {
            "name": "Pedidos",
            "description": "API for pedidos in the system"
        }
    ],
    "schemes": [
        "http"
    ],
    "consumes": [
        "aplication/json"
    ],
    "produces": [
        "aplication/json"
    ],
    "paths": {
        "/pedido": {
            "post": {
                "summary": "Criar um pedido na plataforma",
                "tags": [
                    "Pedido"
                ],
                "parameters": [
                    {
                        "informacao": "informação útil que o utilizador queira acrescentar ao pedido",
                        "in": "body",
                        "estadoUtilizador": "Indicar estado do utilizado",
                        "shema": {
                            "$ref": "#/models/pedido.js#"
                        }
                    }
                ]
            },
            "get": {
                "summary": "Retorna todos os pedidos existentes",
                "tags": [
                    "Pedido"
                ]
            }
        },
        "/pedido/:pedidoId": {
            "get": {
                "summary": "Retorna um pedido com um determinado id",
                "tags": [
                    "Pedido"
                ],
                "parameters": [
                    {
                        "name": "Pedido",
                        "in": "Header",
                        "description": "Pedido com um dado id"
                    }
                ]
            }
        },
        "/utilizador": {
            "post": {
                "summary": "Guarda um utilizador com as informações passadas",
                "tags": [
                    "Utilizador"
                ],
                "parameters": [
                    {
                        "name": "Utilizador",
                        "in": "body",
                        "description": "Utilizador com as propriedades dadas",
                        "schema": {
                            "$ref": "#/models/utilizador.js#"
                        }
                    }
                ]
            },
            "get": {
                "summary": "Retorna todos os utilizadores existentes",
                "tags": [
                    "Utilizador"
                ]
            }
        },
        "/utilizador/:utilizadorId": {
            "get": {
                "summary": "Retorna todos o utilizador com o id dado",
                "tags": [
                    "Utilizador"
                ],
                "parameters": [
                    {
                        "name": "Utilizador",
                        "in": "Header",
                        "description": "Utilizador com as propriedades dadas"
                    }
                ]
            },
            "put": {
                "summary": "Atualiza o utilizador com o id dado",
                "tags": [
                    "Utilizador"
                ],
                "parameters": [
                    {
                        "name": "Utilizador",
                        "in": "body",
                        "description": "Utilizador com as novas propriedades"
                    }
                ]
            }
        }
    }
}